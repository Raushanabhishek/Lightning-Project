<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <aura:attribute name="nameOfComp" type ="String" default ="SME_Business_Customer_Creation_Form"/> <!-- SME_Business_Customer_Creation_Form -->
    <aura:attribute name="accObj" type="Account" />
    <aura:attribute name="app" type="Application__c" />
    <aura:attribute name="listOfAccPerson" type="Account[]"/>
    <aura:attribute name="listOfParties" type="Party__c[]"/>
    <aura:attribute name="listOfFacility" type="Facility__c[]"/>
    <aura:attribute name="listOfCollateral" type="Collateral__c[]"/>
    <aura:attribute name="isModalOpen" type="boolean" default="false"/>
    <aura:attribute name="isPrevButton" type="boolean" default="false"/>
    <aura:attribute name="isPrevEnable" type="boolean" default="false"/>
    <aura:attribute name="isNextEnable" type="boolean" default="true"/>
    <!--aura:handler name="SME_Business_CmpEvent_Next" event="c:SME_New_Loan_Main_Com_Event" action="{!c.setAttributeAccountNext}"/ -->
    <aura:if isTrue="{!v.nameOfComp =='SME_Business_Customer_Creation_Form'}">
        <aura:if isTrue="{!v.isPrevButton}">
            <c:SME_Business_Customer_Creation_Form aura:id="cusDetailCmp" acc ="{!v.accObj}"/>
            <aura:set attribute="else">
            	<c:SME_Business_Customer_Creation_Form aura:id="cusDetailCmp"/>    
            </aura:set>
        </aura:if>
    </aura:if>
    <aura:if isTrue="{!v.nameOfComp =='CreateKeyPersonDetails'}">
        <aura:if isTrue="{!v.isPrevButton}">
            <c:CreateKeyPersonDetails aura:id="keyPartiesCmp" businessAccount = "{!v.accObj}" app ="{!v.app}" PartiesList ="{!v.listOfAccPerson}" isShow="false"/>
            <aura:set attribute="else">
            	<c:CreateKeyPersonDetails aura:id="keyPartiesCmp" businessAccount = "{!v.accObj}" app ="{!v.app}"/>    
            </aura:set>
        </aura:if>
    </aura:if>
    <aura:if isTrue="{!v.nameOfComp == 'FinancialDetails'}">
        <aura:if isTrue="{!v.isPrevButton}">
            <c:FinancialDetails aura:id="financialCmp" app ="{!v.app}" listOfFacility ="{!v.listOfFacility}" listOfCollateral ="{!v.listOfCollateral}"/>
            <aura:set attribute="else">
            	<c:FinancialDetails aura:id="financialCmp" app ="{!v.app}"/>    
            </aura:set>
        </aura:if>
    </aura:if>
    <aura:if isTrue="{!v.nameOfComp == 'SME_App_Sumit_Form'}">
        <c:SME_App_Sumit_Form appObj ="{!v.app}" listOfFacility ="{!v.listOfFacility}"/>
    </aura:if>
    <div class="slds-m-around_xx-large">
        <!--Use aura:if tag to display/hide popup based on isModalOpen value-->  
        <aura:if isTrue="{!v.isModalOpen}">
            <!-- Modal/Popup Box starts here-->
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container">
                    <!-- Modal/Popup Box Header Starts here-->
                    <header class="slds-modal__header">
                        <lightning:buttonIcon iconName="utility:close"
                                              onclick="{!c.closeModel}"
                                              alternativeText="close"
                                              variant="bare-inverse"
                                              class="slds-modal__close"/>
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Error</h2>
                    </header>
                    <!--Modal/Popup Box Body Starts here-->
                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                        <p><b>Oops! Something went wrong. !!!
                            </b>
                        </p>
                    </div>
                    <!--Modal/Popup Box Footer Starts here-->
                    <footer class="slds-modal__footer">
                        <lightning:button variant="neutral"
                                          label="Cancel"
                                          title="Cancel"
                                          onclick="{!c.closeModel}"/>
                        <lightning:button variant="brand"
                                          label="OK"
                                          title="OK"
                                          onclick="{!c.closeModel}"/>
                    </footer>
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
        </aura:if>
    </div>
    <aura:if isTrue="{!v.isNextEnable}">
        <div style="float: right; margin:9px">
            <lightning:button variant="brand" label="Next >>" onclick="{!c.rerenderThePage}"/>   
        </div>
    </aura:if>
    <aura:if isTrue="{!v.isPrevEnable}">
        <div style="float: left; margin:9px">
            <lightning:button variant="brand" label="Previous" onclick="{!c.prevRerenderPage}"/>   
        </div>
    </aura:if>    
</aura:component>